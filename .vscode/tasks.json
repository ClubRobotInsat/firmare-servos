{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "export PATH=\"$HOME/.cargo/bin:$PATH\"; cargo build -v --release",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "export PATH=\"$HOME/.cargo/bin:$PATH\"; cargo clean -v"
        },
        {
            "label": "Check",
            "type": "shell",
            "command": "export PATH=\"$HOME/.cargo/bin:$PATH\"; cargo check -v --release"
        }
    ]
}